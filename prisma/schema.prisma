generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  oauth_token        String?
  oauth_token_secret String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id             String    @id @default(cuid())
  name           String?
  firstName      String?
  lastName       String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  profileId      String    @unique
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  accounts       Account[]
  sessions       Session[]
  profile        Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)
}

model Profile {
  id              String        @id @default(cuid())
  userType        UserType      @default(MENTEE)
  bio             String?
  locationId      Int?
  occupationId    Int?
  updatedAt       DateTime      @updatedAt
  gender          Gender?
  sameGenderPref  Boolean?
  isComplete      Boolean       @default(false)
  calendlyUserUri String?       @unique
  calendlyUser    CalendlyUser? @relation(fields: [calendlyUserUri], references: [uri], onDelete: Cascade)
  location        Location?     @relation(fields: [locationId], references: [id])
  occupation      Occupation?   @relation(fields: [occupationId], references: [id])
  user            User?
}

model Location {
  id      Int       @id @default(autoincrement())
  city    String
  country String
  profile Profile[]
}

model Occupation {
  id                Int       @id @default(autoincrement())
  role              String
  yearsOfExperience Int?
  companyId         Int?
  company           Company?  @relation(fields: [companyId], references: [id])
  profile           Profile[]
}

model Company {
  id         Int          @id @default(autoincrement())
  name       String
  occupation Occupation[]
}

model CalendlyUser {
  uri                  String    @id
  name                 String?
  slug                 String?
  email                String?
  scheduling_url       String?
  timezone             String?
  avatar_url           String?
  created_at           DateTime?
  updated_at           DateTime?
  current_organization String?
  resource_type        String?
  profile              Profile?
}

view MentorProfile {
  id                String    @unique
  userType          UserType?
  firstName         String?
  lastName          String?
  bio               String?
  gender            Gender?
  city              String?
  country           String?
  role              String?
  yearsOfExperience Int?
  company           String?
  sameGenderPref    Boolean?
}

enum UserType {
  MENTOR
  MENTEE
}

enum Gender {
  MALE
  FEMALE
}
